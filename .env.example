# Configuration d'environnement pour Infrastructure Optimizer
# Copiez ce fichier vers .env et configurez vos valeurs

# Configuration Django
SECRET_KEY=your-secret-key-here
DEBUG=True

# Configuration Azure OpenAI (obligatoire pour les recommandations IA)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Configuration Base de Données (optionnel - SQLite par défaut)
# DATABASE_URL=sqlite:///db.sqlite3
# Pour PostgreSQL : DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# Pour MySQL : DATABASE_URL=mysql://user:password@localhost:3306/dbname

# Configuration Logging (optionnel)
LOG_LEVEL=INFO

# Seuils de détection d'anomalies (optionnel - valeurs par défaut configurées)
ANOMALY_THRESHOLD_CPU=80
ANOMALY_THRESHOLD_MEMORY=85
ANOMALY_THRESHOLD_LATENCY=500
ANOMALY_THRESHOLD_DISK=90
ANOMALY_THRESHOLD_IO_WAIT=20
ANOMALY_THRESHOLD_ERROR_RATE=0.05
ANOMALY_THRESHOLD_TEMPERATURE=75
ANOMALY_THRESHOLD_POWER=400